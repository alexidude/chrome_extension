{
  "name": "codebattle-web-extension",
  "description": "Web-extension for CodeBattle",
  "homepage_url": "https://codebattle.hexlet.io/",
  "version": "0.1.4",
  "manifest_version": 2,
  "icons": {
    "128": "assets/128.png"
  },
  "browser_action": {
    "default_icon": "assets/128.png",
    "default_title": "CodeBattle webExtension",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "assets/*"
  ],
  "permissions": [
    "*://codebattle.hexlet.io/",
    "*://localhost/*",
    "activeTab",
    "tabs",
    "notifications",
    "cookies",
    "windows",
    "storage",
    "webNavigation",
    "webRequest"
  ]
}